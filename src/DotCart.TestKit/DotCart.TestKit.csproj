<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Helper classes for writing tests for DotCart Applications</Title>
        <Description>
            The DotCart.TestKit contains the base classes that are used in the TestFirst assembly.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AutoFixture.Xunit2" Version="4.18.1"/>
        <PackageReference Include="FluentAssertions" Version="6.12.0"/>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0"/>
        <PackageReference Include="FakeItEasy" Version="8.1.0"/>
        <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0"/>
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0"/>
        <PackageReference Include="xunit.abstractions" Version="2.0.3"/>
        <PackageReference Include="xunit.core" Version="2.6.6"/>
        <PackageReference Include="xunit.assert" Version="2.6.6"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\DotCart.Abstractions\DotCart.Abstractions.csproj"/>
        <ProjectReference Include="..\DotCart.Context\DotCart.Context.csproj"/>
        <ProjectReference Include="..\DotCart.Core\DotCart.Core.csproj"/>
        <ProjectReference Include="..\DotCart.Defaults\DotCart.Defaults.csproj"/>
    </ItemGroup>

</Project>
